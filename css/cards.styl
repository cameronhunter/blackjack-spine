.card
  position: relative
  width: 119px
  height: 166px
  box-shadow: 0 0 7px #111
  border-radius: 3px
  text-align: left
  display: block
  float: left
  margin-left: 5px
  background: #fff
  text-transform: uppercase
  font-size: 32px
  line-height: 26px
  font-weight: bold
  padding: 5px

  div
    clear: right

  &.♥, &.♦
    color: red
  
.card.face-down
  background: #49afcd url(/img/larry.png) -18px -18px repeat

  div
    visibility: hidden
